<%= simple_form_for article do |f| %>
  <div class="form-group">
    <%= f.input :title, label: 'Заголовок',
                input_html: { class: 'form-control', autofocus: true } %>
  </div>

  <div class="form-group">
    <%= f.input :annonce, as: :text, label: 'Анонс',
                input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.input :text, as: :ckeditor, label: 'Статья',
                input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.button :submit, 'Сохранить новость', class: 'btn btn-default' %>
    <%= link_to 'Назад', admin_articles_path(page: params[:page]), class: 'btn btn-default',
                role: 'button', data: { confirm: 'Продолжить без сохранения изменений?' } %>
  </div>

  <%= hidden_field_tag 'page', params[:page] %>
<% end %>
