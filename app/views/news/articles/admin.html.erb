<h2>Новости</h2>

<div class="form-group">
  <%= link_to 'Добавить новость', new_article_path(page: params[:page]),
              class: 'btn btn-default', role: 'button' %>
</div>

<% if @articles.any? %>
  <table class="table table-hover table-condensed">
    <thead>
    <tr>
      <th>Заголовок</th>
      <th>Ононс</th>
      <th>Дата публикации</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @articles.each do |article| %>
      <tr class="table table-hover table-condensed">
        <td><%= article.title %></td>
        <td><%= article.annonce %></td>
        <td>
          <% if article.updated_at > article.created_at %>
            <%= article.updated_at.strftime("%d.%m.%Y %H:%M:%S") %>
          <% else %>
            <%= article.created_at.strftime("%d.%m.%Y %H:%M:%S") %>
          <% end %>
        </td>
        <td>
          <%= link_to 'Просмотреть',
                      edit_article_path(article, page: params[:page]) %>
        </td>
        <td>
          <%= link_to 'Редактировать',
                      edit_article_path(article, page: params[:page]) %>
        </td>
        <td>
          <%= link_to 'Удалить', article_path(article, page: params[:page]),
                      method: :delete, data: { confirm: 'Удалить новость?' } %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>

<%= paginate @articles %>
