<h2>Новости</h2>

<div class="row">
  <div class="col-md-12">
    <% if @articles.any? %>
      <% @articles.each do |article| %>

        <div class="form-group">
          <h3><%= link_to article.title, article_path(article) %></h3>
        </div>

        <div class="form-group">
          <b>Дата публикации:
            <% if article.updated_at > article.created_at %>
              <%= article.updated_at.strftime("%d.%m.%Y %H:%M:%S") %>
            <% else %>
              <%= article.created_at.strftime("%d.%m.%Y %H:%M:%S") %>
            <% end %>
          </b>
        </div>

        <div class="form-group">
          <%= article.annonce %>
        </div>

        <div class="form-group">
          <b><%= link_to 'Читать далее...', article_path(article) %></b>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<%= paginate @articles %>
